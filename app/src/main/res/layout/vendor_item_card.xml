<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="5dp"
    android:id="@+id/transitions_container"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/newImageBackground">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/empty_street"
            android:id="@+id/firstNewsImage"
            android:scaleType="center"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pressedColor"
            android:text="Subscribe"
            android:id="@+id/subscribe"
            android:textSize="10sp"
            android:textColor="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#94000000"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/firstNewsTitle"
                android:text="WWE Legend Jim Ross' Wife, Jan dies At 55 - Wrestling World Offers Their Condolences"
                android:maxLines="5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/vendorIcon"
                    android:src="@drawable/news_lo"
                    android:layout_gravity="bottom"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartoon Network"
                    android:textStyle="bold"
                    android:textSize="8dp"
                    android:id="@+id/vendorName"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"/>



            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>