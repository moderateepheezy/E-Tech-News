<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_news_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    design:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simpumind.e_tech_news.activities.NewsMainActivity">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:animateLayoutChanges="true"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom"
            android:layout_height="wrap_content">

            <View
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="top"
                android:background="@drawable/shadow"/>

            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:id="@+id/bottomNavigationView"
                android:layout_gravity="bottom"
                android:background="@color/white"
                design:itemIconTint="@color/nav_item_color_state"
                design:itemTextColor="@color/nav_item_color_state"
                design:menu="@menu/menu_navigation"
                android:layout_height="wrap_content"/>


        </FrameLayout>

</RelativeLayout>
