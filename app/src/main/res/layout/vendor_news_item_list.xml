<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:id="@+id/transitions_container"
    android:background="#f2f0f0"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="7dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/trump"
                android:transitionName="@string/blue_name"
                android:id="@+id/newsImage"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days ago"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:id="@+id/dateTime"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2d2c2c"
                    android:textStyle="bold"
                    android:id="@+id/newsTitle"
                    android:layout_below="@+id/dateTime"
                    android:layout_alignParentStart="true"
                    android:text="WWE Legend Jim Ross' Wife, Jan dies At 55 - Wrestling World Offers Their Condolences"
                    android:maxLines="4"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/sub_icon"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/sub_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/vendorName"
                    android:layout_marginLeft="5dp"
                    android:text="fmmbmvmmbmbmmb"
                    android:layout_toRightOf="@+id/sub_icon"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>